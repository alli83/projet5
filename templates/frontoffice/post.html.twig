{% extends "/frontoffice/base.html.twig" %}

{% block title %}post.title{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        {% if post.file_attached is empty %}
        {% else %}
        <div class="col-md-12">
            <img src="data:image/jpeg;base64,{{post.file_attached}}" class="img-fluid imagePost" />
        </div>
        {% endif %}
        <div class="text-center mb-3">
            <!-- /.blog-post -->
            <div>
                <h2 class="blog-post-title text-center">{{ post.title }}</h2>
                <p class="blog-post-meta mb-1 text-muted">Par {{ post.pseudo}}</p>
                <p class="blog-post-meta mb-1 text-muted">créé le {{ post.creation_date}}</p>
                <p>{{ post.text }}</p>
                <p class="blog-post-meta mb-1 text-muted">modifié dernièrement le {{ post.last_update}}</p>
            </div>
        </div>
        <hr>
        <div class="mb-3">
            <section>
                <h3>Commentaires</h3>
                {% if session %}
                <div class="col col-lg-4">
                    <form action="/validate" method="post" id="formComment">
                        <div class=" mb-4">
                            <label class="form-label" for="pseudo">Votre nom d'utilisateur:</label>
                            <input type="text" id="pseudo" name="pseudo"  class="form-control" >
                        </div>
                        <div class=" mb-4">
                            <label class="form-label" for="text">Votre message:</label>
                            <textarea type="textarea" id="message" name="text" rows="4"  class="form-control" ></textarea>
                        </div>
                        <input hidden type="number" id="post" name="post" value={{post.id}}>
                        <div>
                            <button type="submit" id="submit"
                                class="btn btn-dark btn-block mb-4">Envoyer</button>
                        </div>
                    </form>
                    <div id="result"></div>
                  
                </div>
                {% endif %}

                {% if comments %}
                {% for comment in comments %}
                <p class="mb-1 text-muted">Commentaire de {{ comment.pseudo }} - posté le {{ comment.created_date}}</p>
                <br>
                <p>{{ comment.text }}</p>
                <hr>
                {% endfor %}
                {% else %}
                <h4 class="alert alert-warning">Il n'y a pas encore de commentaires pour cet article</h4>
                {% endif %}
            </section>
        </div>
        </div>
</div>
        {% endblock %}